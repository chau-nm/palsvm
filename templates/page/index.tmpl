{{ define "title" }}Dashboard{{ end }}

{{ define "extra_css" }}
<link rel="stylesheet" href="assets/css/dashboard.css">
{{ end }}

{{ define "content" }}
<div class="dashboard">
    <div class="menu-grid">
        <a href="/palworld-settings" class="menu-card">
            <div class="card-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"/>
                    <path d="M12 15V9m0 0a3 3 0 100-6 3 3 0 000 6z"/>
                </svg>
            </div>
            <h3>Palworld Settings</h3>
            <p>Cấu hình server Palworld</p>
        </a>

        <a href="/server-status" class="menu-card">
            <div class="card-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="2" y="3" width="20" height="14" rx="2"/>
                    <path d="M8 21h8M12 17v4"/>
                </svg>
            </div>
            <h3>Server Status</h3>
            <p>Xem trạng thái server</p>
        </a>

        <a href="/player-management" class="menu-card">
            <div class="card-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/>
                    <circle cx="9" cy="7" r="4"/>
                    <path d="M23 21v-2a4 4 0 00-3-3.87M16 3.13a4 4 0 010 7.75"/>
                </svg>
            </div>
            <h3>Player Management</h3>
            <p>Quản lý người chơi</p>
        </a>

        <a href="/backup" class="menu-card">
            <div class="card-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4"/>
                    <polyline points="7 10 12 15 17 10"/>
                    <line x1="12" y1="15" x2="12" y2="3"/>
                </svg>
            </div>
            <h3>Backup & Restore</h3>
            <p>Sao lưu và khôi phục dữ liệu</p>
        </a>

        <a href="/logs" class="menu-card">
            <div class="card-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/>
                    <polyline points="14 2 14 8 20 8"/>
                    <line x1="16" y1="13" x2="8" y2="13"/>
                    <line x1="16" y1="17" x2="8" y2="17"/>
                    <polyline points="10 9 9 9 8 9"/>
                </svg>
            </div>
            <h3>Server Logs</h3>
            <p>Xem log hoạt động</p>
        </a>

        <a href="/system-info" class="menu-card">
            <div class="card-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="4" y="4" width="16" height="16" rx="2" ry="2"/>
                    <rect x="9" y="9" width="6" height="6"/>
                    <line x1="9" y1="1" x2="9" y2="4"/>
                    <line x1="15" y1="1" x2="15" y2="4"/>
                    <line x1="9" y1="20" x2="9" y2="23"/>
                    <line x1="15" y1="20" x2="15" y2="23"/>
                    <line x1="20" y1="9" x2="23" y2="9"/>
                    <line x1="20" y1="14" x2="23" y2="14"/>
                    <line x1="1" y1="9" x2="4" y2="9"/>
                    <line x1="1" y1="14" x2="4" y2="14"/>
                </svg>
            </div>
            <h3>System Info</h3>
            <p>Thông tin hệ thống</p>
        </a>

        <a href="/network-settings" class="menu-card">
            <div class="card-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="2"/>
                    <path d="M16.24 7.76a6 6 0 010 8.49m-8.48-.01a6 6 0 010-8.49m11.31-2.82a10 10 0 010 14.14m-14.14 0a10 10 0 010-14.14"/>
                </svg>
            </div>
            <h3>Network Settings</h3>
            <p>Cấu hình mạng</p>
        </a>

        <a href="/advanced-settings" class="menu-card">
            <div class="card-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="3"/>
                    <path d="M12 1v6m0 6v6m5.7-13.7l-4.2 4.2m0 2.8l4.2 4.2M23 12h-6m-6 0H1m13.7 5.7l-4.2-4.2m0-2.8l-4.2-4.2"/>
                </svg>
            </div>
            <h3>Advanced Settings</h3>
            <p>Cài đặt nâng cao</p>
        </a>
    </div>
</div>
{{ end }}

{{ template "base" . }}
