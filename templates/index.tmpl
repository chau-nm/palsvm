{{ define "title" }}<title>Dashboard - Palsvm</title>{{ end }}

{{ define "extra_css" }}
<link rel="stylesheet" href="/css/dashboard.css">
{{ end }}

{{ define "content" }}
<div class="dashboard">
    <h2>Server Statistics</h2>
    <div class="stats-grid">
        <div class="stat-card">
            <h3>Players Online</h3>
            <p>{{ .PlayersOnline }}</p>
        </div>
        <div class="stat-card">
            <h3>CPU Usage</h3>
            <p>{{ .CPUUsage }}%</p>
        </div>
    </div>
</div>
{{ end }}

{{ template "base" . }}